<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    cardview:cardCornerRadius="15sp"
    cardview:cardUseCompatPadding="true"
    android:background="@color/colorPrimary"
    cardview:cardElevation="4sp"
    android:layout_marginTop="-10sp"
    cardview:cardBackgroundColor="#1ebcb4">


<RelativeLayout
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp">


    <ImageView
        android:id="@+id/app_image_list"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/app_text_list"
        android:text="@string/app_name"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80sp"
        android:textSize="22sp"/>

    <LinearLayout
        android:id="@+id/app_category_list_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_checked"
        android:layout_marginStart="77sp"
        android:padding="3sp"
        android:layout_below="@+id/app_text_list">
    <TextView
        android:id="@+id/app_category_list"
        android:text="@string/category_info"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    </LinearLayout>

    <TextView
        android:id="@+id/app_desc_list"
        android:text="@string/app_desc"
        android:textColor="@color/colorPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_category_list_id"
        android:layout_marginStart="80sp"/>
</RelativeLayout>
</androidx.cardview.widget.CardView>