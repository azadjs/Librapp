<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-5sp"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    cardview:cardBackgroundColor="#fafafa"
    cardview:cardCornerRadius="10sp"
    cardview:cardElevation="3sp"
    cardview:cardUseCompatPadding="true">

    <ImageView
        android:id="@+id/app_delete"
        android:layout_width="28sp"
        android:layout_height="28sp"
        android:layout_marginStart="7sp"
        android:layout_marginBottom="7sp"
        android:padding="5sp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end"
        android:src="@drawable/ic_delete" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10sp"
        android:paddingEnd="10sp"
        android:paddingTop="3sp"
        android:paddingBottom="3sp">


        <ImageView
            android:id="@+id/app_image_list"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_centerVertical="true"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/app_text_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80sp"
            android:layout_marginEnd="20sp"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textSize="20sp" />

        <LinearLayout
            android:id="@+id/app_category_list_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_text_list"
            android:layout_marginStart="80sp"
            android:background="@drawable/button_sharp"
            android:padding="4sp">

            <TextView
                android:id="@+id/app_category_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="@string/category_info" />
        </LinearLayout>

        <TextView
            android:id="@+id/app_desc_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/app_category_list_id"
            android:layout_marginStart="80sp"
            android:layout_marginTop="2sp"
            android:text="@string/app_desc" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>